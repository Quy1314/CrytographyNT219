{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file (MinGW)",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-std=c++17",
                "-O3",
                "-DNDEBUG",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-D_WIN32_WINNT=0x0501",
                "-Wall",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lcryptopp",
                "-lpthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: MinGW g++.exe with Crypto++"
        }
    ]
}
